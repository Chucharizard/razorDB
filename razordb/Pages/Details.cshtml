@page
@model razordb.Pages.DetailsModel

@{
    ViewData["Title"] = "Detalles de Tarea";
}

<h1>Detalles de Tarea</h1>

<div class="row mt-3">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header bg-info text-white">
                <h4>Información de la Tarea</h4>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-3">
                        @Html.DisplayNameFor(model => model.Tarea.nombreTarea)
                    </dt>
                    <dd class="col-sm-9">
                        <strong>@Html.DisplayFor(model => model.Tarea.nombreTarea)</strong>
                    </dd>

                    <dt class="col-sm-3">
                        @Html.DisplayNameFor(model => model.Tarea.fechaVencimiento)
                    </dt>
                    <dd class="col-sm-9">
                        @Model.Tarea.fechaVencimiento.ToString("dd/MM/yyyy HH:mm")
                    </dd>

                    <dt class="col-sm-3">
                        @Html.DisplayNameFor(model => model.Tarea.estado)
                    </dt>
                    <dd class="col-sm-9">
                        @{
                            var badgeClass = Model.Tarea.estado switch
                            {
                                "Pendiente" => "badge bg-warning text-dark",
                                "En Curso" => "badge bg-primary",
                                "Finalizado" => "badge bg-success",
                                _ => "badge bg-secondary"
                            };
                        }
                        <span class="@badgeClass">@Model.Tarea.estado</span>
                    </dd>

                    <dt class="col-sm-3">
                        @Html.DisplayNameFor(model => model.Tarea.idUsuario)
                    </dt>
                    <dd class="col-sm-9">
                        Usuario @Html.DisplayFor(model => model.Tarea.idUsuario)
                    </dd>
                </dl>
            </div>
            <div class="card-footer">
                <div class="btn-group">
                    <a asp-page="./Edit" asp-route-id="@Model.Tarea.Id" class="btn btn-primary">Editar</a>
                    <a asp-page="./Delete" asp-route-id="@Model.Tarea.Id" class="btn btn-danger">Eliminar</a>
                    <a asp-page="./Index" class="btn btn-secondary">Volver a la lista</a>
                </div>
            </div>
        </div>
    </div>
</div>