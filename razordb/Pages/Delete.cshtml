@page
@model razordb.Pages.DeleteModel

@{
    ViewData["Title"] = "Eliminar Tarea";
}

<h1>Eliminar Tarea</h1>

<div class="alert alert-danger mt-3">
    <i class="bi bi-exclamation-triangle-fill me-2"></i>
    <strong>¿Está seguro de que desea eliminar esta tarea?</strong> Esta acción no se puede deshacer.
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card border-danger">
            <div class="card-header bg-danger text-white">
                <h4>Información de la tarea a eliminar</h4>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-3">
                        @Html.DisplayNameFor(model => model.Tarea.nombreTarea)
                    </dt>
                    <dd class="col-sm-9">
                        <strong>@Html.DisplayFor(model => model.Tarea.nombreTarea)</strong>
                    </dd>

                    <dt class="col-sm-3">
                        @Html.DisplayNameFor(model => model.Tarea.fechaVencimiento)
                    </dt>
                    <dd class="col-sm-9">
                        @Model.Tarea.fechaVencimiento.ToString("dd/MM/yyyy HH:mm")
                    </dd>

                    <dt class="col-sm-3">
                        @Html.DisplayNameFor(model => model.Tarea.estado)
                    </dt>
                    <dd class="col-sm-9">
                        @{
                            var badgeClass = Model.Tarea.estado switch
                            {
                                "Pendiente" => "badge bg-warning text-dark",
                                "En Curso" => "badge bg-primary",
                                "Finalizado" => "badge bg-success",
                                _ => "badge bg-secondary"
                            };
                        }
                        <span class="@badgeClass">@Model.Tarea.estado</span>
                    </dd>

                    <dt class="col-sm-3">
                        @Html.DisplayNameFor(model => model.Tarea.idUsuario)
                    </dt>
                    <dd class="col-sm-9">
                        Usuario @Html.DisplayFor(model => model.Tarea.idUsuario)
                    </dd>
                </dl>
            </div>
            <div class="card-footer">
                <form method="post">
                    <input type="hidden" asp-for="Tarea.Id" />
                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash me-1"></i>Confirmar Eliminación
                        </button>
                        <a asp-page="./Index" class="btn btn-secondary">Cancelar</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>