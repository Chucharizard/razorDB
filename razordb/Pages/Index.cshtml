@page
@model razordb.Pages.IndexModel

@{
    ViewData["Title"] = "Lista de Tareas";
}

<h1>Lista de Tareas</h1>

<p>
    <a asp-page="Create" class="btn btn-primary mb-3">Crear Nueva Tarea</a>
</p>

<div class="card">
    <div class="card-body p-0">
        <table class="table table-striped table-hover mb-0">
            <thead class="table-light">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Tarea[0].nombreTarea)</th>
                    <th>@Html.DisplayNameFor(model => model.Tarea[0].fechaVencimiento)</th>
                    <th>@Html.DisplayNameFor(model => model.Tarea[0].estado)</th>
                    <th>@Html.DisplayNameFor(model => model.Tarea[0].idUsuario)</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
            @foreach (var item in Model.Tarea) {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.nombreTarea)</td>
                        <td>@item.fechaVencimiento.ToString("dd/MM/yyyy HH:mm")</td>
                        <td>
                            @{
                                var badgeClass = item.estado switch
                                {
                                    "Pendiente" => "badge bg-warning text-dark",
                                    "En Curso" => "badge bg-primary",
                                    "Finalizado" => "badge bg-success",
                                    _ => "badge bg-secondary"
                                };
                            }
                            <span class="@badgeClass">@item.estado</span>
                        </td>
                        <td>Usuario @item.idUsuario</td>
                        <td>
                            <div class="btn-group btn-group-sm">
                                <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-outline-primary">Editar</a>
                                <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-outline-info">Detalles</a>
                                <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">Eliminar</a>
                            </div>
                        </td>
                    </tr>
            }
            </tbody>
        </table>
    </div>
</div>