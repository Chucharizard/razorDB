@page
@model razordb.Pages.CreateModel

@{
    ViewData["Title"] = "Crear Tarea";
}

<h1>Crear Tarea</h1>
<hr />
<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="mb-3">
                        <label asp-for="Tarea.nombreTarea" class="form-label"></label>
                        <input asp-for="Tarea.nombreTarea" class="form-control" minlength="3" required />
                        <span asp-validation-for="Tarea.nombreTarea" class="text-danger"></span>
                        <small class="form-text text-muted">Mínimo 3 caracteres</small>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Tarea.fechaVencimiento" class="form-label"></label>
                        <input asp-for="Tarea.fechaVencimiento" class="form-control" type="datetime-local" required />
                        <span asp-validation-for="Tarea.fechaVencimiento" class="text-danger"></span>
                        <small class="form-text text-muted">La fecha debe ser igual o posterior a hoy</small>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Tarea.estado" class="form-label"></label>
                        <select asp-for="Tarea.estado" class="form-select" required>
                            <option value="">-- Seleccione un estado --</option>
                            <option value="Pendiente">Pendiente</option>
                            <option value="En Curso">En Curso</option>
                            <option value="Finalizado">Finalizado</option>
                        </select>
                        <span asp-validation-for="Tarea.estado" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Tarea.idUsuario" class="form-label"></label>
                        <select asp-for="Tarea.idUsuario" class="form-select" required>
                            <option value="">-- Seleccione un usuario --</option>
                            @for (int i = 1; i <= 5; i++)
                            {
                                <option value="@i">Usuario @i</option>
                            }
                        </select>
                        <span asp-validation-for="Tarea.idUsuario" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <button type="submit" class="btn btn-primary">Crear</button>
                        <a asp-page="Index" class="btn btn-secondary">Volver a la lista</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(document).ready(function() {
         
            var hoy = new Date();
            var manana = new Date(hoy);
            manana.setDate(hoy.getDate() + 1);

     
            var yearHoy = hoy.getFullYear();
            var monthHoy = (hoy.getMonth() + 1).toString().padStart(2, '0');
            var dayHoy = hoy.getDate().toString().padStart(2, '0');
            var fechaMin = `${yearHoy}-${monthHoy}-${dayHoy}T00:00`;

     
            var yearMan = manana.getFullYear();
            var monthMan = (manana.getMonth() + 1).toString().padStart(2, '0');
            var dayMan = manana.getDate().toString().padStart(2, '0');
            var hourMan = manana.getHours().toString().padStart(2, '0');
            var minMan = manana.getMinutes().toString().padStart(2, '0');
            var fechaDefault = `${yearMan}-${monthMan}-${dayMan}T${hourMan}:${minMan}`;

            console.log("Fecha mínima: " + fechaMin);
            console.log("Fecha predeterminada: " + fechaDefault);


            $("#Tarea_fechaVencimiento").attr("min", fechaMin);

      
            if (!$("#Tarea_fechaVencimiento").val()) {
                $("#Tarea_fechaVencimiento").val(fechaDefault);
            }
        });
    </script>
}